<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controlller.Authentication.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomePage</servlet-name>
        <servlet-class>controlller.HomePage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddNewUser</servlet-name>
        <servlet-class>controlller.User.AddNewUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListUser</servlet-name>
        <servlet-class>controlller.User.ListUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>controlller.Authentication.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>controlller.Authentication.Register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IssueDetailsServlet</servlet-name>
        <servlet-class>controlller.Issue.IssueDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IssueListServlet</servlet-name>
        <servlet-class>controlller.Issue.IssueListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewIssueServlet</servlet-name>
        <servlet-class>controlller.Issue.NewIssueServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RequirementDetailsServlet</servlet-name>
        <servlet-class>controlller.Requirement.RequirementDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RequirementIssueServlet</servlet-name>
        <servlet-class>controlller.Requirement.RequirementIssueServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RequirementListServlet</servlet-name>
        <servlet-class>controlller.Requirement.RequirementListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditProfileServlet</servlet-name>
        <servlet-class>controlller.User.editProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>verify</servlet-name>
        <servlet-class>controlller.Authentication.verify</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomePage</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddNewUser</servlet-name>
        <url-pattern>/adduser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListUser</servlet-name>
        <url-pattern>/ListUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IssueDetailsServlet</servlet-name>
        <url-pattern>/issue-details</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IssueListServlet</servlet-name>
        <url-pattern>/issue-list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewIssueServlet</servlet-name>
        <url-pattern>/new-issue</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RequirementDetailsServlet</servlet-name>
        <url-pattern>/requirement-details</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RequirementIssueServlet</servlet-name>
        <url-pattern>/requirement-issue</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RequirementListServlet</servlet-name>
        <url-pattern>/requirement-list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditProfileServlet</servlet-name>
        <url-pattern>/editProfileServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>verify</servlet-name>
        <url-pattern>/verify</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
</web-app>
